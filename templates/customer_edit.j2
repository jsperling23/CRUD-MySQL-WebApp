<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locations</title>
    <link href={{ url_for('static', filename='css/style.css') }} rel="stylesheet" type="text/css" />

</head>

<body>
    <h1>Locations</h1>

    <nav>
        <a href="/">Homepage</a>
        <a href="customers">Customers</a>
        <a href="locations">Locations</a>
        <a href="products">Products</a>
        <a href="products-sales">ProductsSales</a>
        <a href="sales">Sales</a>
    </nav>

    <div id="browse" style="display: block">
        <p><strong>Browse Locations</strong></p>
        <table border="1" cellpadding="5">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
            </tr>
            {% for customer in customers %}
            <tr>
                <td align="right">{{customer.customerID}}</td>
                <td>{{customer.name}}</td>
                <td align="right">{{customer.email}}</td>
                <td>{{customer.phoneNumber}}</td>
                <td>{{customer.address}}</td>
            </tr>
            {% endfor %}
            
        </table>

        <p>&nbsp;</p>

        <div id="update" style="display: block">
        <form id="updateCustomer" action="/edit_customer/{{customers[0].customerID}}" method="post">
            <legend><strong>Update Customer</strong></legend>
            <fieldset class="fields">
                <label>ID:</label> 1
                 <label> Name </label> <input type="text" value="{{customers[0].name}}" name="name">
                <label> Email </label> <input type="text" name="email" value="{{customers[0].email}}">
                <label> Address </label> <input type="text" value="{{customers[0].address}}" name="address" id="address">
                <label> Phone Number </label> <input type="tel" name="phoneNumber" value="{{customers[0].phoneNumber}}" id="phoneNumber">
            </fieldset>
            <input class="btn" type="submit" id="UpdateCustomer" value="Save Update Customer">
            <a href="javascript:history. back()">
                <input class="btn" type="button" value="cancel" onclick = "browseLocations()">
            </a>
        </form>
    </div><!-- update -->
    <p>&nbsp;</p>
    </div> <!-- browse -->

</body>

</html>
